<main>
    {{#if isAuth}}
        <h1 class="text-center">Courses</h1>
        <section>
            <a href="/course/create" class="btn btn-warning ">Create Course</a>
            <form class="search float-right">
                <label>Search: </label>
                <input type="text" name="search">
                <input type="submit" class="btn btn-info" value="Search" method="GET">
            </form>
        </section>
    {{else}}
        <div class="jumbotron jumbotron-fluid">
            <div class="container">
                <h1 class="display-4">Video Tutorials</h1>
                <p class="lead">Start Self-Study Today: It'll Change Your Life</p>
            </div>
        </div>
    {{/if}}

    {{#if courses}}
        {{#if isAuth}}
            <div class="container mt-3">
                <div class="row ">
                    <div class="card-deck d-flex justify-content-center">
                        {{#each courses}}
                            {{>course isAuth=../isAuth}}
                        {{/each}}
                    </div>
                </div>
            </div>
        {{else}}
            <div>
                <h1 class="text-center">Top Courses</h1>
                <div class="container mt-3">
                    <div class="row d-flex justify-content-center">
                        <div class="card-deck">
                            {{#each courses}}
                                {{>course isAuth=../isAuth}}
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        {{/if}}
    {{else}}
        <h3 class="text-center">No courses...</h3>
    {{/if}}
</main>