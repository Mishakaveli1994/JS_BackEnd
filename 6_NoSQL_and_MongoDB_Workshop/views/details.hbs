<main>
  <h1>{{product.name}}</h1>
  <img class="cube" src="{{product.imageUrl}}">
  <div class="details">
    <p><span>Description:</span>{{product.description}}</p>
    <p><span>Difficulty level:</span> {{product.difficultyLevel}}</p>
    <a class="btn" href="/products">Back</a>
    <a class="btn" href="/products/{{product._id}}/attach">Attach</a>
  </div>
  <h2>Accessories</h2>
  <div class="accessories">
    {{#if product.accessories}}
      {{#each product.accessories}}
        <div class="accessory">
          <img src="{{this.imageUrl}}" alt="stickerName">
          <h3>{{this.name}}</h3>
          <p>{{this.description}}</p>
        </div>
      {{/each}}
    {{else}}
      <h3 class="italic">This cube has no accessories yet...</h3>
    {{/if}}
  </div>

</main>